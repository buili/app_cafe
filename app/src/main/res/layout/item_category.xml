<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@drawable/background_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/txt_name_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên đồ uống"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView
                android:id="@+id/img_edit_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/img_delete_category"
                android:src="@drawable/baseline_edit_note_24" />

            <ImageView
                android:id="@+id/img_delete_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_restore_from_trash_24" />
        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>